@model UpdateContactDto
@{
	ViewData["Title"] = "CreateContact";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Contact Page Management</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">New Contact Entry</div>
						</div>
						<input type="hidden" asp-for=ContactID />
						<div class="card-body">
							<div class="form-group">
								<label for="Location">Location</label>
								<input type="Title" class="form-control" asp-for="Location" id="Location">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Phone Number</label>
								<input type="ImageUrl" class="form-control" asp-for="Phone" id="Phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Email">E-Mail</label>
								<input type="email" class="form-control" asp-for="Email" id="Email">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Description">Description</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="Description"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Save Contact</button>

						</div>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>
